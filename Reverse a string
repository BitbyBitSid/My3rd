#include <stdio.h>

int main() {
    char word[100];

    
    printf("Enter a word: ");
    scanf("%s", word);

    
    int i = 0;
    while (word[i] != '\0') {
        i++;
    }

   
    printf("Reversed word: ");
    for (int j = i - 1; j >= 0; j--) {
        printf("%c", word[j]);
    }
    printf("\n");

    return 0;
}
